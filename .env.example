# AI Agent Marketplace - Environment Configuration
# Copy this file to .env and modify as needed

# Application
APP_NAME="AI Agent Marketplace"
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000

# Database (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite+aiosqlite:///./marketplace.db
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/marketplace

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-super-secret-key-change-in-production
API_KEY_PREFIX=aam_

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Marketplace Settings
TRANSACTION_FEE_PERCENT=2.5
DEFAULT_AGENT_CREDITS=100.0

